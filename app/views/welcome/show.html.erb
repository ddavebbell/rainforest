<div class="">
	SHOW PRODUCT

	<% image_tag @product %>

	<%= @product.name %><br>
	<%= @product.price %><br>
	<%= @product.description %>

</div>

<div class="">

	<% @product.reviews.each do |review| %>
		<%= review.text %>
		<p>Reviewer: <%= review.name %></p>
		<p>Created at: <%= review.created_at %></p>
	<% end %>
</div>
